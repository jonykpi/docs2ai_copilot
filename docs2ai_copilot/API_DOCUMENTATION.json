      "python": "import requests\n\nurl = 'http://localhost:8069/api/customers'\nheaders = {\n    'Authorization': 'Bearer YOUR_API_TOKEN',\n    'Content-Type': 'application/json'\n}\ndata = {\n    'name': 'Test Customer',\n    'email': 'test@example.com',\n    'is_company': True\n}\n\nresponse = requests.post(url, headers=headers, json=data)\nprint(response.json())"
