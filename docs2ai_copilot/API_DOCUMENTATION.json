    {
      "name": "List Customers",
      "method": "GET",
      "url": "/api/customers",
      "description": "Get a list of all customers (partners with customer_rank > 0)",
      "authentication": "Bearer Token",
      "query_parameters": [
        {
          "name": "limit",
          "type": "integer",
          "required": false,
          "default": 100,
          "description": "Maximum number of records to return"
        },
        {
          "name": "offset",
          "type": "integer",
          "required": false,
          "default": 0,
          "description": "Number of records to skip (for pagination)"
        }
      ],
      "request_example": {
        "method": "GET",
        "url": "http://localhost:8069/api/customers?limit=50&offset=0",
        "headers": {
          "Authorization": "Bearer YOUR_API_TOKEN",
