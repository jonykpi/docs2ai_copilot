  "testing_examples": {
    "get_customers": {
      "curl": "curl -X GET 'http://localhost:8069/api/customers?limit=10' -H 'Authorization: Bearer YOUR_API_TOKEN' -H 'Content-Type: application/json'",
      "javascript": "fetch('http://localhost:8069/api/customers?limit=10', {\n  method: 'GET',\n  headers: {\n    'Authorization': 'Bearer YOUR_API_TOKEN',\n    'Content-Type': 'application/json'\n  }\n})\n.then(response => response.json())\n.then(data => console.log(data));",
      "python": "import requests\n\nurl = 'http://localhost:8069/api/customers'\nheaders = {\n    'Authorization': 'Bearer YOUR_API_TOKEN',\n    'Content-Type': 'application/json'\n}\nparams = {'limit': 10}\n\nresponse = requests.get(url, headers=headers, params=params)\nprint(response.json())"
    },
    "create_customer": {
      "curl": "curl -X POST 'http://localhost:8069/api/customers' -H 'Authorization: Bearer YOUR_API_TOKEN' -H 'Content-Type: application/json' -d '{\"name\":\"Test Customer\",\"email\":\"test@example.com\",\"is_company\":true}'",
