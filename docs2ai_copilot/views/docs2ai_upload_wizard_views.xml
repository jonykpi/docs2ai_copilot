<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_docs2ai_copilot_wizard_form" model="ir.ui.view">
        <field name="name">docs2ai.upload.wizard.form</field>
        <field name="model">docs2ai.upload.wizard</field>
        <field name="arch" type="xml">
            <form string="Upload to Docs2AI">
                <group>
                    <field name="invoice_id" invisible="1"/>
                    <field name="pdf_file" filename="pdf_filename" widget="binary" options="{'accept': '.pdf,.jpg,.jpeg,.png,.gif,.bmp,.webp'}" required="1"/>
                    <field name="pdf_filename" invisible="1"/>
                </group>
                <div class="alert alert-info" role="alert">
                    <strong>Note:</strong> API configuration is managed in <strong>Settings â†’ Docs2AI</strong>
                </div>
                <footer>
                    <button string="Upload" name="action_upload" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
